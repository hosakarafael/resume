// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("PRISMA_DATABASE_URL")
}

type Section{
  title String?
  description String?
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String 
  email String @unique
  password String
  fileName String?
  phone String?
  gender Gender @default(NONE)
  birthDate DateTime?
  address String?
  title String?
  careerObjective String?
  interests String[] @default(["","","","","",""])
  skills String[] @default(["","","","","",""])
  educations Section[]
  works Section[]
}



enum Gender {
  NONE
  MALE
  FEMALE
}